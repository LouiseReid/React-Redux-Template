{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.test.js",
        "**/__mocks__/*",
        "**/redux-test-utils.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
